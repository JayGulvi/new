@{
}
<form asp-action="AddVehicles" method="post" >
    <div class="form-group">
        <label for="exampleInputEmail1">Vehicle Name</label>
        <input type="text" class="form-control" asp-for="VehicleName" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Vehicle Name">
       <span asp-validation-for="VehicleName"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Vehicle Category</label>
        <select asp-for="Category">
            <option>Bike</option>
            <option>Four Wheeler</option>
            <option>Tempo</option>
            <option>Truck</option>
        </select>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Vehicle Description</label>
        <input type="text" class="form-control" asp-for="Description" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Vehicle Description">
        <span asp-validation-for="Description"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">Submit</button>
</form>